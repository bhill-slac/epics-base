+# RHEL5 currently supports linux-x86 (RHEL5 32bit) and RTEMS-beatnik cross compiles
+ifeq '$(EPICS_HOST_ARCH)' 'linux-x86_64'
+CROSS_COMPILER_TARGET_ARCHS	+= linux-x86
+CROSS_COMPILER_TARGET_ARCHS	+= RTEMS-beatnik
+endif
 
